general {
  output_format = "i3bar"
  interval = 5
}

order += "wireless wlp0s20f3"
order += "memory"
order += "battery all"
order += "tztime local"

wireless wlp0s20f3 {
  format_up = " wifi %bitrate "
  format_down = " wifi down "
}

battery all {
  format = " %status %percentage "
  format_down = " bat down "
  status_chr = "chr"
  status_bat = "bat"
  status_unk = "bat"
  status_full = "chr"
  last_full_capacity = true
}

memory {
  format = " ram %percentage_used "
}

tztime local {
  format = " %b %d, %-l:%M%P "
}
