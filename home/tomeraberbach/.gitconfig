[core]
    autocrlf = input
    editor = nvim
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    mergeoptions = --no-edit

[user]
    email = tomeraberbach@gmail.com
    name = Tomer Aberbach
    signingKey = DFBA76D022524A53C21C5EAA6971AB3D54A7896D

[color]
    ui = auto

[diff]
    compactionHeuristic = true

[commit]
    gpgSign = true

[merge]
    ff = no

[pull]
    rebase = true

[alias]
    st = status
    pstatus = show --stat --oneline --format=format:'%s' HEAD
    pst = pstatus

    hdiff = diff HEAD
    pdiff = diff HEAD~ HEAD

    br = branch
    co = checkout

    track = add -N
    tr = add -N
    untrack = rm -r --cached
    untr = untrack

    unstage = reset HEAD --
    unadd = unstage

    cm = commit
    empty-commit = commit --allow-empty --allow-empty-message
    ecm = empty-commit
    uncommit = reset HEAD~
    uncm = uncommit

    amend = commit --amend -C HEAD
    amn = amend
    unamend = git reset --soft HEAD@{1}
    unamn = unamend

    full-graph = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) %<(40,trunc)%s %C(dim white)%<(15,trunc)%an%C(reset)' --branches --remotes --tags --notes HEAD
    fgr = full-graph
    graph = full-graph -n 15
    gr = graph

