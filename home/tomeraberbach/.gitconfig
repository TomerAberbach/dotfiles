[core]
    autocrlf = input
    editor = nvim
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    mergeoptions = --no-edit

[user]
    email = tomeraberbach@gmail.com
    name = Tomer Aberbach
    signingKey = DFBA76D022524A53C21C5EAA6971AB3D54A7896D

[color]
    ui = true

[color "status"]
    header = normal
    added = "#5AF78E"
    updated = "#5AF78E"
    changed = "#F3F99D"
    untracked = "#FF5C57" 

[color "branch"]
    current = "#57C7FF"
    local = normal
    remote = "#9AEDFE"
    plain = normal

[format]
    pretty = "%C(#57C7FF)%h%Creset %C(#F3F99D)%d%Creset %s"

[diff]
    compactionHeuristic = true

[commit]
    gpgSign = true

[merge]
    ff = no

[pull]
    rebase = true

