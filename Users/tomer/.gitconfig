[include]
  path = .gitconfig-secret

[user]
  email = tomeraberbach@gmail.com
  name = Tomer Aberbach
  signingKey = DFBA76D022524A53C21C5EAA6971AB3D54A7896D

[init]
  defaultBranch = main

[core]
  excludesfile = /Users/tomer/.gitignore_global
  pager = delta

[commit]
  gpgsign = true

[push]
  followTags = true
  autoSetupRemote = true

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true
    
[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default
    
[alias]
  append = town append
  hack = town hack
  kill = town kill
  new-pull-request = town new-pull-request
  prepend = town prepend
  prune-branches = town prune-branches
  rename-branch = town rename-branch
  repo = town repo
  ship = town ship
  sync = town sync

[git-town]
  ship-delete-remote-branch = false
  code-hosting-driver = github
